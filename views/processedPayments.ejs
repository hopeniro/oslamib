<body>
   <!-- FLOATING SIDEBAR -->
  <aside class="sidebar">
    <div style="display:flex;align-items:center;gap:12px;padding:24px 20px 12px 20px;">
      <img src="/logo.png" style="width:44px;height:44px;border-radius:8px;object-fit:contain;">
      <div>
        <div style="font-size:20px;font-weight:700;color:#0891b2;">OsLAM</div>
        <div style="font-size:13px;color:#666;">Cashier</div>
      </div>
    </div>
     <nav style="margin-top:10px;">
      <ul style="list-style:none;padding:0;margin:0;">
        <li><a href="/cashierdashboard" class="nav-link"><i class="bi bi-grid"></i> Dashboard</a></li>
        <li><a href="/cashier" class="nav-link"><i class="bi bi-clock-history"></i> Pending Payments</a></li>
        <li><a href="/cashier/processed" class="nav-link"><i class="bi bi-check2-circle"></i> Processed Payment</a></li>
      </ul>
    </nav>
  </aside>

 <div style="margin-left:260px; min-height:100vh; background:#f5f7fa; padding:36px 32px 32px 32px;">
  <div class="container" style="max-width:1100px; margin:40px auto; background:#fff; border-radius:8px; box-shadow:0 2px 12px rgba(0,0,0,0.08); padding:32px;">
      <h1 style="margin:0 0 18px 0; font-size:2rem; font-weight:700; color:#222;">Processed Payments Records</h1>
      <div style="display:flex; align-items:center; justify-content:space-between; margin-bottom: 16px;">
        <h2 style="margin:0;"></h2>
        <div style="display:flex; align-items:center; gap:8px;">
          <div style="position:relative;" id="processedViewWrapper">
            <button id="processedViewBtn" onclick="toggleProcessedViewMenu(event)" style="padding:6px 12px; cursor:pointer; border:1px solid #ccc; background:white; border-radius:4px;">
              <i class="bi bi-eye"></i> View
            </button>
            <div id="processedViewMenu" style="display:none; position:absolute; right:0; top:100%; margin-top:4px; background:white; border:1px solid #ccc; border-radius:4px; box-shadow:0 2px 8px rgba(0,0,0,0.15); min-width:240px; z-index:1000;">
              <div style="padding:8px 12px; border-bottom:1px solid #eee; font-weight:600; font-size:13px;">Show Columns</div>
              <div style="padding:6px 12px;" onclick="event.stopPropagation()"><input type="checkbox" id="processedToggle-bill" checked onchange="toggleProcessedColumn('bill', this.checked)"> <label for="processedToggle-bill">Bill Number</label></div>
              <div style="padding:6px 12px;" onclick="event.stopPropagation()"><input type="checkbox" id="processedToggle-hrn" checked onchange="toggleProcessedColumn('hrn', this.checked)"> <label for="processedToggle-hrn">HRN</label></div>
              <div style="padding:6px 12px;" onclick="event.stopPropagation()"><input type="checkbox" id="processedToggle-name" checked onchange="toggleProcessedColumn('name', this.checked)"> <label for="processedToggle-name">Patient Name</label></div>
              <div style="padding:6px 12px;" onclick="event.stopPropagation()"><input type="checkbox" id="processedToggle-subtotal" checked onchange="toggleProcessedColumn('subtotal', this.checked)"> <label for="processedToggle-subtotal">Subtotal</label></div>
              <div style="padding:6px 12px;" onclick="event.stopPropagation()"><input type="checkbox" id="processedToggle-discounts" checked onchange="toggleProcessedColumn('discounts', this.checked)"> <label for="processedToggle-discounts">Discounts</label></div>
              <div style="padding:6px 12px;" onclick="event.stopPropagation()"><input type="checkbox" id="processedToggle-promissory" checked onchange="toggleProcessedColumn('promissory', this.checked)"> <label for="processedToggle-promissory">Promissory</label></div>
              <div style="padding:6px 12px;" onclick="event.stopPropagation()"><input type="checkbox" id="processedToggle-final" checked onchange="toggleProcessedColumn('final', this.checked)"> <label for="processedToggle-final">Final Total</label></div>
              <div style="padding:6px 12px;" onclick="event.stopPropagation()"><input type="checkbox" id="processedToggle-processedby" checked onchange="toggleProcessedColumn('processedby', this.checked)"> <label for="processedToggle-processedby">Processed By</label></div>
              <div style="padding:6px 12px;" onclick="event.stopPropagation()"><input type="checkbox" id="processedToggle-date" checked onchange="toggleProcessedColumn('date', this.checked)"> <label for="processedToggle-date">Date</label></div>
            </div>
          </div>
          <input id="processedSearch" type="text" placeholder="Search HRN or name" style="border:1px solid #ccc; border-radius:4px; padding:6px 10px; font-size:13px; width:200px;">
          <div style="display:flex; align-items:center; gap:6px; font-size:13px;">
            Rows per page
            <select id="processedRowsPerPage" style="border:1px solid #ccc; border-radius:4px; padding:4px 8px;">
              <option>10</option>
              <option>25</option>
              <option>50</option>
              <option>100</option>
              <option value="all">All</option>
            </select>
          </div>
        </div>
      </div>
      <table id="cashierPaymentsTable" class="table">
      <thead>
        <tr>
          <th class="col-bill">Bill Number</th>
          <th class="col-hrn">HRN</th>
          <th class="col-name">Patient Name</th>
          <th class="col-subtotal">Subtotal</th>
          <th class="col-discounts">Discounts</th>
          <th class="col-promissory">Promissory</th>
          <th class="col-final">Final Total</th>
          <th class="col-processedby">Processed By</th>
          <th class="col-date">Date</th>
        </tr>
      </thead>
      <tbody>
        <% if (cashierPayments && cashierPayments.length === 0) { %>
          <tr>
            <td colspan="9" style="text-align: center;">No processed payments</td>
    <!-- All table and button styling is now handled by main.css -->
          </tr>
        <% } else if (cashierPayments) { %>
          <% cashierPayments.forEach(payment => { %>
            <tr>
              <td class="col-bill"><strong><%= payment.billNumber %></strong></td>
              <td class="col-hrn"><%= payment.patientHRN %></td>
            <td class="col-name"><%= payment.patientName %></td>
            <td class="col-subtotal">₱<%= payment.subtotal.toFixed(2) %></td>
            <td class="col-discounts">
              <% if (payment.discountAmount > 0) { %>
                -₱<%= payment.discountAmount.toFixed(2) %>
                <% if (payment.discountTypes && payment.discountTypes.length > 0) { %>
                  <br><small style="color: #666;"><%= payment.discountTypes.join(', ') %></small>
                <% } %>
              <% } else { %>
                -
              <% } %>
            </td>
            <td class="col-promissory">
              <% if (payment.promissoryAmount > 0) { %>
                -₱<%= payment.promissoryAmount.toFixed(2) %>
              <% } else { %>
                -
              <% } %>
            </td>
            <td class="col-final"><strong>₱<%= payment.finalTotal.toFixed(2) %></strong></td>
            <td class="col-processedby"><%= payment.processedBy %></td>
            <td class="col-date"><%= new Date(payment.paymentDate).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric', hour: '2-digit', minute: '2-digit' }) %></td>
          </tr>
        <% }) %>
      <% } %>
    </tbody>
  </table>
  <div id="processedPager" style="display:flex; align-items:center; justify-content:flex-end; gap:10px; margin-top:10px; font-size:13px; color:#666;">
    <span id="processedPageInfo">Page 1 of 1</span>
    <button id="processedPrev" style="padding:4px 8px; cursor:pointer;">&laquo;</button>
    <button id="processedNext" style="padding:4px 8px; cursor:pointer;">&raquo;</button>
  </div>
</div>
 </div>
</div>
 </div>
  <script>
    function toggleProcessedViewMenu(event){
      const menu = document.getElementById('processedViewMenu');
      if (!menu) return;
      const isShown = menu.style.display === 'block';
      menu.style.display = isShown ? 'none' : 'block';
      if (!isShown){
        setTimeout(()=>document.addEventListener('click', processedViewOutside), 0);
      }
      event.stopPropagation();
    }
    function processedViewOutside(e){
      const menu = document.getElementById('processedViewMenu');
      const btn = document.getElementById('processedViewBtn');
      if (!menu || !btn) return;
      if (!menu.contains(e.target) && e.target !== btn){
        menu.style.display = 'none';
        document.removeEventListener('click', processedViewOutside);
      }
    }
    function toggleProcessedColumn(key, visible) {
      const table = document.getElementById('cashierPaymentsTable');
      const th = table.querySelector(`thead .col-${key}`);
      const tds = table.querySelectorAll(`tbody .col-${key}`);
      const display = visible ? '' : 'none';
      if (th) th.style.display = display;
      tds.forEach(c => { c.style.display = display; });
    }

    (function initProcessedTableUI(){
      const tbody = document.querySelector('#cashierPaymentsTable tbody');
      const allRows = Array.from(tbody.querySelectorAll('tr'));
      const searchInput = document.getElementById('processedSearch');
      const rowsPerSelect = document.getElementById('processedRowsPerPage');
      const pageInfo = document.getElementById('processedPageInfo');
      const prevBtn = document.getElementById('processedPrev');
      const nextBtn = document.getElementById('processedNext');

      let filtered = allRows.slice();
      let currentPage = 1;
      let rowsPerPage = parseRowsPer(rowsPerSelect.value);
      function parseRowsPer(v){ return v === 'all' ? Infinity : parseInt(v,10); }

      function render(){
        allRows.forEach(r => r.style.display = 'none');
        const total = filtered.length;
        const totalPages = Math.max(1, Math.ceil(total / (rowsPerPage || Infinity)));
        if (currentPage > totalPages) currentPage = totalPages;
        const start = (currentPage-1) * (rowsPerPage || Infinity);
        const end = rowsPerPage === Infinity ? total : start + rowsPerPage;
        filtered.slice(start, end).forEach(r => r.style.display = '');
        if (pageInfo) pageInfo.textContent = `Page ${total===0?0:currentPage} of ${total===0?0:totalPages}`;
        if (prevBtn) prevBtn.disabled = currentPage <= 1 || total === 0;
        if (nextBtn) nextBtn.disabled = currentPage >= totalPages || total === 0;
      }

      function applySearch(){
        const q = (searchInput.value||'').toLowerCase();
        if (!q) filtered = allRows.slice();
        else {
          filtered = allRows.filter(r => {
            const hrn = (r.querySelector('.col-hrn')?.textContent||'').toLowerCase();
            const name = (r.querySelector('.col-name')?.textContent||'').toLowerCase();
            return hrn.includes(q) || name.includes(q);
          });
        }
        currentPage = 1; render();
      }

      searchInput.addEventListener('input', applySearch);
      rowsPerSelect.addEventListener('change', ()=>{ rowsPerPage = parseRowsPer(rowsPerSelect.value); currentPage=1; render(); });
      prevBtn.addEventListener('click', ()=>{ if(currentPage>1){ currentPage--; render(); }});
      nextBtn.addEventListener('click', ()=>{ currentPage++; render(); });

      applySearch();
    })();
  </script>
  
</body>
</html>
