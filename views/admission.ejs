<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admission Form</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  <style>
    .form-container {
      max-width: 600px;
      margin: 50px auto;
      padding: 30px;
      background: #f9f9f9;
      border-radius: 8px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }
    .patient-info {
      background: #fff;
      padding: 20px;
      border-radius: 6px;
      margin-bottom: 20px;
      border-left: 4px solid #007bff;
    }
    .patient-info h3 {
      margin: 0 0 10px 0;
      font-size: 1.2em;
      color: #333;
    }
    .patient-info p {
      margin: 5px 0;
      color: #555;
    }
  </style>
</head>
<body>
  <div style="width: 150px; float: left; margin-right: 20px;">
    <ul style="list-style-type: none; padding: 0;">
       <li><a href="/admit-list">All Patient List</a></li>
      <li><a href="/patient">Patient</a></li>
      <li><a href="/onhold">On Hold</a></li>
      <li><a href="/patient-archive">Archived Patients</a></li>
      <br>
      <li><a href="/admissionrecords">Admission Records</a></li>
      <li><a href="/admittedpatient">Admitted Patients</a></li>
      <li><a href="/dischargedpatients">Discharged Patients</a></li>
      <br>
      <li><a href="/opd">OPD</a></li>
      <li><a href="/opd/voided">Void Transactions</a></li>
      <li><a href="/opd/deleted-diagnoses">Deleted Diagnose</a></li>
      <br>
      <li><a href="/emergency">Emergency</a></li>
      <li><a href="/emergency/voided">Void Transactions</a></li>
      <li><a href="/emergency/deleted-diagnoses">Deleted Diagnose</a></li>
      <br>
      <li><a href="/billing">Billing</a></li>
       <li><a href="/billing/payments">Payment Records</a></li>
      <br>
      <li><a href="/cashier">Cashier</a></li>
      <li><a href="/cashier/processed">Processed Payments</a></li>
      <br>
      <li><a href="/promissory">Promissory Notes</a></li>
      <li><a href="/services">services</a></li>
      <li><a href="/doctor">Doctors</a></li>
      <li><a href="/nurse">Nurses</a></li>
      <li><a href="/doctorscheduling">Doctor Schedule</a></li>
      <li><a href="/nursescheduling">Nurse Schedule</a></li>

    </ul>
  </div>

  <div class="form-container">
    <h2 class="text-center mb-4">Admit Patient</h2>

    <div class="patient-info" id="patientInfo">
      <p><strong>Loading patient information...</strong></p>
    </div>

    <form id="admissionForm">
      <input type="hidden" name="patientId" id="patientId">
      <input type="hidden" name="fullName" id="fullName">

      <div class="mb-3">
        <label for="admissionType" class="form-label">Choose Admission Type</label>
        <select name="admissionType" id="admissionType" class="form-select" required>
          <option value="">-- Select --</option>
          <option value="Emergency">Emergency</option>
          <option value="Out Patient Department">Out Patient Department</option>
        </select>
      </div>

      <div class="mb-3">
        <div class="form-check">
          <input class="form-check-input" type="checkbox" name="walkIn" id="walkIn">
          <label class="form-check-label" for="walkIn">Walk-in</label>
        </div>
      </div>

      <div class="mb-3">
        <label for="referredBy" class="form-label">Referred By</label>
        <input type="text" name="referredBy" id="referredBy" class="form-control">
      </div>

      <button type="submit" class="btn btn-primary w-100">Admit Patient</button>
    </form>
  </div>

  <script>
    // Get patientId from URL and fetch patient data
    function getQueryParam(name) {
      const url = new URL(window.location.href);
      return url.searchParams.get(name);
    }

    async function loadPatientData() {
      const patientId = getQueryParam('patientId');
      if (!patientId) {
        document.getElementById('patientInfo').innerHTML = '<p class="text-danger"><strong>No patient selected</strong></p>';
        return;
      }

      try {
        const res = await axios.get(`/api/patients/${patientId}`);
        const patient = res.data;
        
        const fullName = `${patient.lastName.charAt(0).toUpperCase() + patient.lastName.slice(1).toLowerCase()}, ${patient.firstName.charAt(0).toUpperCase() + patient.firstName.slice(1).toLowerCase()} ${patient.middleInitial ? patient.middleInitial.toUpperCase() : ''}`;
        
        document.getElementById('patientInfo').innerHTML = `
          <h3>HRN: ${patient.patientId}</h3>
          <p><strong>Full Name:</strong> ${fullName}</p>
        `;
        
        document.getElementById('patientId').value = patient.patientId;
        document.getElementById('fullName').value = fullName;
      } catch (err) {
        document.getElementById('patientInfo').innerHTML = '<p class="text-danger"><strong>Failed to load patient data</strong></p>';
        console.error(err);
      }
    }
    loadPatientData();

    // Enable/disable "Referred By" based on Walk-in checkbox
    document.getElementById('walkIn').addEventListener('change', function() {
      const referredByInput = document.getElementById('referredBy');
      if (this.checked) {
        referredByInput.disabled = true;
        referredByInput.value = '';
      } else {
        referredByInput.disabled = false;
      }
    });

    // Form submission
    document.getElementById('admissionForm').addEventListener('submit', async function(e) {
      e.preventDefault();
      
      const formData = new FormData(this);
      const data = Object.fromEntries(formData.entries());
      
      try {
        const res = await axios.post('/admission/admit', data);
        alert('Patient admitted successfully!');
        
        // Redirect to the chosen department
        if (data.admissionType === 'Emergency') {
          window.location.href = '/emergency';
        } else if (data.admissionType === 'Out Patient Department') {
          window.location.href = '/opd';
        }
      } catch (err) {
        const errorMsg = err.response?.data?.error || 'Failed to admit patient.';
        alert(errorMsg);
        console.error(err);
      }
    });
  </script>
</body>
</html>
