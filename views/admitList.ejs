  <body style="background: #f5f7fa;">
    <div style="margin-left: 270px;">
      <div class="container" style="max-width: 1100px; margin: 40px auto; background: #fff; border-radius: 8px; box-shadow: 0 2px 12px rgba(0,0,0,0.08); padding: 32px;">
  <!-- Removed Triage heading as requested -->
  <style>
    .container {
      border-left: 4px solid #0891b2 !important;
    }
  </style>
        <% if (typeof success !== 'undefined' && success) { %>
          <p style="color: green; padding: 10px; border: 1px solid #ddd; margin-bottom: 12px;"><%= success %></p>
        <% } %>
        <% if (typeof error !== 'undefined' && error) { %>
          <p style="color: red; padding: 10px; border: 1px solid #ddd; margin-bottom: 12px;"><%= error %></p>
        <% } %>
        <div style="display:flex; align-items:center; justify-content:space-between; margin-bottom: 16px;">
          <h2 style="margin:0; display:flex; align-items:center; gap:10px; font-size:1.6rem; font-weight:600; color:#0891b2;">
            <i class="bi bi-card-list" style="font-size:1.7rem;"></i>
            Registered Patients
          </h2>
          <div style="display:flex; align-items:center; gap:8px;">
            <div style="position:relative;" id="patientViewWrapper">
              <button id="patientViewBtn" onclick="togglePatientViewMenu(event)" style="padding:6px 12px; cursor:pointer; border:1px solid #ccc; background:white; border-radius:4px;">
                <i class="bi bi-eye"></i> View
              </button>
              <div id="patientViewMenu" style="display:none; position:absolute; right:0; top:100%; margin-top:4px; background:white; border:1px solid #ccc; border-radius:4px; box-shadow:0 2px 8px rgba(0,0,0,0.15); min-width:180px; z-index:1000;">
                <div style="padding:8px 12px; border-bottom:1px solid #eee; font-weight:600; font-size:13px;">Show Columns</div>
                <div style="padding:6px 12px;" onclick="event.stopPropagation()">
                  <input type="checkbox" id="colToggle-hrn" checked onchange="togglePatientColumn('hrn', this.checked)">
                  <label for="colToggle-hrn">HRN</label>
                </div>
                <div style="padding:6px 12px;" onclick="event.stopPropagation()">
                  <input type="checkbox" id="colToggle-name" checked onchange="togglePatientColumn('name', this.checked)">
                  <label for="colToggle-name">Full Name</label>
                </div>
                <div style="padding:6px 12px;" onclick="event.stopPropagation()">
                  <input type="checkbox" id="colToggle-birth" checked onchange="togglePatientColumn('birth', this.checked)">
                  <label for="colToggle-birth">Birth Date</label>
                </div>
                <div style="padding:6px 12px;" onclick="event.stopPropagation()">
                  <input type="checkbox" id="colToggle-details" checked onchange="togglePatientColumn('details', this.checked)">
                  <label for="colToggle-details">Patient Details</label>
                </div>
                <div style="padding:6px 12px;" onclick="event.stopPropagation()">
                  <input type="checkbox" id="colToggle-action" checked onchange="togglePatientColumn('action', this.checked)">
                  <label for="colToggle-action">Action</label>
                </div>
              </div>
            </div>
            <input id="patientSearch" type="text" placeholder="Search HRN or name" style="border:1px solid #ccc; border-radius:4px; padding:6px 10px; font-size:13px; width:200px;">
            <div style="display:flex; align-items:center; gap:6px; font-size:13px;">
              Rows per page
              <select id="patientRowsPerPage" style="border:1px solid #ccc; border-radius:4px; padding:4px 8px;">
                <option>10</option>
                <option>25</option>
                <option>50</option>
                <option>100</option>
                <option value="all">All</option>
              </select>
            </div>
          </div>
        </div>
        <table id="patientTable">
          <thead>
            <tr>
              <th class="col-hrn" style="cursor:pointer;user-select:none;" onclick="sortTable('hrn')">HRN <i id="sortIcon-hrn" class="bi bi-chevron-expand" style="font-size:16px;vertical-align:middle;opacity:0.5;transition:transform 0.2s;"></i></th>
              <th class="col-name" style="cursor:pointer;user-select:none;" onclick="sortTable('name')">Full Name <i id="sortIcon-name" class="bi bi-chevron-expand" style="font-size:16px;vertical-align:middle;opacity:0.5;transition:transform 0.2s;"></i></th>
              <th class="col-birth" style="cursor:pointer;user-select:none;" onclick="sortTable('birth')">Birth Date <i id="sortIcon-birth" class="bi bi-chevron-expand" style="font-size:16px;vertical-align:middle;opacity:0.5;transition:transform 0.2s;"></i></th>
              <th class="col-details" style="cursor:pointer;user-select:none;" onclick="sortTable('details')">Patient Details <i id="sortIcon-details" class="bi bi-chevron-expand" style="font-size:16px;vertical-align:middle;opacity:0.5;transition:transform 0.2s;"></i></th>
              <th class="col-action" style="cursor:pointer;user-select:none;" onclick="sortTable('action')">Action <i id="sortIcon-action" class="bi bi-chevron-expand" style="font-size:16px;vertical-align:middle;opacity:0.5;transition:transform 0.2s;"></i></th>
            </tr>
          </thead>
          <tbody>
            <% function titleCase(s){ if(!s) return ''; return String(s).split(' ').map(function(w){ return w ? (w.charAt(0).toUpperCase()+w.slice(1).toLowerCase()) : ''; }).join(' ');} %>
            <% function fmtDate(d){ if(!d) return ''; var dt=new Date(d); if(isNaN(dt)) return ''; var months=['Jan','Feb','Mar','Apr','May','Jun','Jul','Aug','Sep','Oct','Nov','Dec']; return months[dt.getMonth()] + ' ' + dt.getDate() + ' ' + dt.getFullYear(); } %>
            <% patients.forEach(patient => { %>
              <% const isProcessed = processedMap && processedMap[patient.patientId]; %>
              <% const isAdmitted = admittedMap && admittedMap[patient.patientId]; %>
              <tr class="patient-row">
                <td class="col-hrn"><%= patient.patientId %></td>
                <td class="col-name"><%= titleCase(patient.lastName) %>, <%= titleCase(patient.firstName) %> <%= patient.middleInitial ? patient.middleInitial.toUpperCase() : '' %></td>
                <td class="col-birth"><%= fmtDate(patient.birthDate) %></td>
          <td class="col-details"><a href="/patients/<%= patient.patientId %>/view" style="text-decoration: underline;">View</a></td>
          <td class="col-action">
            <% if (isAdmitted) { %>
            <button class="btn btn-disabled" data-hrn="<%= patient.patientId %>" disabled>Admitted</button>
            <% } else if (isProcessed) { %>
            <button class="btn btn-cancel" data-hrn="<%= patient.patientId %>">Cancel</button>
            <% } else { %>
            <button class="btn btn-white" data-hrn="<%= patient.patientId %>">Process</button>
            <% } %>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
  
  <div id="patientPager" style="display:flex; align-items:center; justify-content:flex-end; gap:10px; margin-top:10px; font-size:13px; color:#666;">
    <span id="patientPageInfo">Page 1 of 1</span>
    <button id="patientPrev" style="padding:4px 8px; cursor:pointer;">&laquo;</button>
    <button id="patientNext" style="padding:4px 8px; cursor:pointer;">&raquo;</button>
  </div>

  </div>
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  <script>
    // Table sorting logic for admitList table
    let currentSort = { key: null, asc: true };
    function sortTable(key) {
      const table = document.getElementById('patientTable');
      const tbody = table.querySelector('tbody');
      const rows = Array.from(tbody.querySelectorAll('tr'));
      const colMap = {
        hrn: 0,
        name: 1,
        birth: 2,
        details: 3,
        action: 4
      };
      const colIdx = colMap[key];
      if (colIdx === undefined) return;
      // Toggle sort direction
      if (currentSort.key === key) currentSort.asc = !currentSort.asc;
      else { currentSort.key = key; currentSort.asc = true; }
      // Reset all icons
      Object.keys(colMap).forEach(k => {
        const icon = document.getElementById('sortIcon-' + k);
        if (icon) {
          icon.className = 'bi bi-chevron-expand';
          icon.style.transform = 'none';
          icon.style.opacity = '0.5';
        }
      });
      // Set current sort icon
      const icon = document.getElementById('sortIcon-' + key);
      if (icon) {
        icon.className = currentSort.asc ? 'bi bi-chevron-up' : 'bi bi-chevron-down';
        icon.style.opacity = '1';
      }
      // Sort rows
      rows.sort((a, b) => {
        let va = a.children[colIdx].textContent.trim().toLowerCase();
        let vb = b.children[colIdx].textContent.trim().toLowerCase();
        if (va < vb) return currentSort.asc ? -1 : 1;
        if (va > vb) return currentSort.asc ? 1 : -1;
        return 0;
      });
      // Re-append sorted rows
      rows.forEach(r => tbody.appendChild(r));
    }
  </script>
  <script>
    // Patient List Table Controls
    (function initPatientTableUI() {
      const table = document.getElementById('patientTable');
      if (!table) return;

      const tbody = table.querySelector('tbody');
      const allRows = Array.from(tbody.querySelectorAll('.patient-row'));
      const searchInput = document.getElementById('patientSearch');
      const rowsPerPageSelect = document.getElementById('patientRowsPerPage');
      const pageInfo = document.getElementById('patientPageInfo');
      const prevBtn = document.getElementById('patientPrev');
      const nextBtn = document.getElementById('patientNext');

      let state = {
        search: '',
        perPage: parseRowsPerPage(rowsPerPageSelect?.value || '10'),
        page: 1
      };

      function parseRowsPerPage(val){
        return (val === 'all') ? Infinity : Math.max(1, parseInt(val || '10', 10));
      }

      function rowMatches(row, term){
        if (!term) return true;
        const hrn = (row.querySelector('.col-hrn')?.textContent || '').toLowerCase();
        const name = (row.querySelector('.col-name')?.textContent || '').toLowerCase();
        return hrn.includes(term) || name.includes(term);
      }

      function apply(){
        const term = state.search.trim().toLowerCase();
        const filtered = allRows.filter(r => rowMatches(r, term));

        const total = filtered.length;
        const perPage = state.perPage === Infinity ? total || 1 : state.perPage;
        const totalPages = Math.max(1, Math.ceil(total / perPage));
        state.page = Math.min(Math.max(1, state.page), totalPages);

        allRows.forEach(r => r.style.display = 'none');

        const startIdx = (state.page - 1) * perPage;
        const endIdx = state.perPage === Infinity ? total : Math.min(startIdx + perPage, total);
        for (let i = startIdx; i < endIdx; i++) {
          const row = filtered[i];
          if (row) row.style.display = '';
        }

        if (pageInfo) pageInfo.textContent = `Page ${state.page} of ${totalPages}`;
        if (prevBtn) prevBtn.disabled = state.page <= 1;
        if (nextBtn) nextBtn.disabled = state.page >= totalPages;
      }

      if (searchInput) searchInput.addEventListener('input', () => {
        state.search = searchInput.value || '';
        state.page = 1;
        apply();
      });

      if (rowsPerPageSelect) rowsPerPageSelect.addEventListener('change', () => {
        state.perPage = parseRowsPerPage(rowsPerPageSelect.value);
        state.page = 1;
        apply();
      });

      if (prevBtn) prevBtn.addEventListener('click', () => { state.page--; apply(); });
      if (nextBtn) nextBtn.addEventListener('click', () => { state.page++; apply(); });

      apply();
    })();

    // View dropdown
    function togglePatientViewMenu(event){
      const menu = document.getElementById('patientViewMenu');
      if (!menu) return;
      const isShown = menu.style.display === 'block';
      menu.style.display = isShown ? 'none' : 'block';
      if (!isShown){
        setTimeout(()=>document.addEventListener('click', patientViewOutside), 0);
      }
      event.stopPropagation();
    }

    function patientViewOutside(e){
      const menu = document.getElementById('patientViewMenu');
      const btn = document.getElementById('patientViewBtn');
      if (!menu || !btn) return;
      if (!menu.contains(e.target) && e.target !== btn){
        menu.style.display = 'none';
        document.removeEventListener('click', patientViewOutside);
      }
    }

    function togglePatientColumn(key, show){
      const th = document.querySelector(`#patientTable thead .col-${key}`);
      const tds = document.querySelectorAll(`#patientTable tbody .col-${key}`);
      const display = show ? '' : 'none';
      if (th) th.style.display = display;
      tds.forEach(td => td.style.display = display);
    }

    // Original Process/Cancel logic
    document.querySelectorAll('button[data-hrn]').forEach(function(btn) {
      btn.addEventListener('click', async function(e) {
        e.preventDefault();
        if (btn.disabled || btn.classList.contains('btn-disabled')) return;

        const hrn = btn.getAttribute('data-hrn');

        const isCancel = btn.classList.contains('btn-cancel');
        if (!isCancel) {
          // Process action
          try {
            // Optimistic UI update
            btn.textContent = 'Cancel';
            btn.classList.remove('btn-white', 'btn-process');
            btn.classList.add('btn-cancel');

            await axios.post('/processPatient', { patientId: hrn });
          } catch (err) {
            // Revert on error
            console.error('Error processing patient:', err);
            btn.textContent = 'Process';
            btn.classList.remove('btn-cancel');
            btn.classList.add('btn-white');
          }
        } else {
          // Cancel action
          try {
            await axios.post('/cancelProcessPatient', { patientId: hrn });
            // Update UI to unprocessed
            btn.textContent = 'Process';
            btn.classList.remove('btn-cancel');
            btn.classList.add('btn-white');
          } catch (err) {
            console.error('Error canceling process:', err);
            // If server indicates admitted, lock the button
            const status = err && err.response ? err.response.status : 0;
            if (status === 409) {
              btn.textContent = 'Admitted';
              btn.classList.remove('btn-cancel', 'btn-white');
              btn.classList.add('btn-disabled');
              btn.disabled = true;
            }
          }
        }
      });
    });
  </script>
