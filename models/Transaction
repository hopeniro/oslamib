const mongoose = require('mongoose');

// Delete any existing model to force fresh compilation
delete mongoose.connection.models['Transaction'];

const transactionSchema = new mongoose.Schema({
  transactionId: {
    type: String,
    required: true,
    unique: true
  },
  admissionId: String,
  patientId: String,
  categoryId: {
    type: mongoose.Schema.Types.ObjectId,
    ref: 'DepartmentCategory'
  },
  services: [
    {
      type: { type: String },  // Explicit: field named 'type' with String value
      description: String,
      procedureAmount: Number,
      itemUsed: String,
      itemAmount: Number,
      qty: { type: Number, default: 1 },
      amount: Number
    }
  ],
  status: {
    type: String,
    enum: ['For Billing', 'Billing Confirmed', 'Payment Verified'],
    default: 'For Billing'
  }
}, { versionKey: false, timestamps: true });

module.exports = mongoose.model('Transaction', transactionSchema);
